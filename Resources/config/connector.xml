<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_website.connector.website_manifest.class">Integrated\Bundle\WebsiteBundle\Connector\WebsiteManifest</parameter>
        <parameter key="integrated_website.connector.website_configuration.class">Integrated\Bundle\WebsiteBundle\Connector\WebsiteConfiguration</parameter>
        <parameter key="integrated_website.connector.website_adapter.class">Integrated\Bundle\WebsiteBundle\Connector\WebsiteAdapter</parameter>

        <parameter key="integrated_website.connector.twitter_manifest.class">Integrated\Bundle\WebsiteBundle\Connector\TwitterManifest</parameter>
        <parameter key="integrated_website.connector.twitter_configuration.class">Integrated\Bundle\WebsiteBundle\Connector\TwitterConfiguration</parameter>
        <parameter key="integrated_website.connector.twitter_adapter.class">Integrated\Bundle\WebsiteBundle\Connector\TwitterAdapter</parameter>

    </parameters>

    <services>

        <service id="integrated_website.connector.website_manifest" class="%integrated_website.connector.website_manifest.class%" />

        <service id="integrated_website.connector.website_configuration" class="%integrated_website.connector.website_configuration.class%" />

        <service id="integrated_website.connector.website_adapter" class="%integrated_website.connector.website_adapter.class%">
            <argument type="service" id="integrated_website.connector.website_manifest" />
            <argument type="service" id="integrated_website.connector.website_configuration" />
            <tag name="integrated_channel.connector" />
        </service>

        <service id="integrated_website.connector.twitter_manifest" class="%integrated_website.connector.twitter_manifest.class%" />

        <service id="integrated_website.connector.twitter_configuration" class="%integrated_website.connector.twitter_configuration.class%" />

        <service id="integrated_twitter.connector.twitter_adapter" class="%integrated_website.connector.twitter_adapter.class%">
            <argument type="service" id="integrated_website.connector.twitter_manifest" />
            <argument type="service" id="integrated_website.connector.twitter_configuration" />
            <tag name="integrated_channel.connector" />
        </service>

    </services>
</container>