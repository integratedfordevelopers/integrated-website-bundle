<div class="panel panel-default">
    <div class="panel-heading">
        {{ block.title }}
    </div>
    <div class="panel-body">
        {% if mailed %}
            {{ block.thankYouText|default }}
        {% else %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        {% endif %}
    </div>
</div>